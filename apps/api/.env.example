NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Supabase Postgres (PgBouncer — used at runtime)
DATABASE_URL="postgresql://postgres.PROJECT_REF:PASSWORD@aws-0-REGION.pooler.supabase.com:6543/postgres?pgbouncer=true&schema=public"

# Supabase Postgres (Direct — used for migrations only)
DIRECT_URL="postgresql://postgres:PASSWORD@db.PROJECT_REF.supabase.co:5432/postgres?schema=public&sslmode=disable"

# Azure Cache for Redis
REDIS_HOST=your-redis.centralindia.redis.azure.net
REDIS_PORT=10000
REDIS_PRIMARY_KEY=your-azure-redis-primary-key

# JWT
JWT_ACCESS_SECRET=change-me-access-secret-must-be-32-chars!!
JWT_REFRESH_SECRET=change-me-refresh-secret-must-be-32-chars!
JWT_ACCESS_EXPIRY_SECONDS=900
JWT_REFRESH_EXPIRY_SECONDS=604800

# Cookies
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# CORS
CORS_ORIGIN=http://localhost:3000

# Feature Flags
ENABLE_EMAIL=false
ENABLE_GOOGLE_OAUTH=false
ENABLE_ASSIGNMENTS=true
ENABLE_PASSWORD_RESET=true

# Logging
LOG_LEVEL=debug
